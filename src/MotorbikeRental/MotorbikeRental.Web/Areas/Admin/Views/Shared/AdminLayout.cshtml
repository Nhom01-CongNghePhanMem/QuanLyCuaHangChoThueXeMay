<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Dashboard</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/admin/admin-layout.css">
</head>
@RenderSection("Scripts", required: false)
<body>
    <!-- Admin Header -->
    <div class="admin-header">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h4 class="mb-0">
                        <i class="fas fa-tachometer-alt me-2"></i>
                        Admin Dashboard
                    </h4>
                </div>
                <div class="col-md-6 text-end">
                    <span class="me-3">
                        <i class="fas fa-user me-1"></i>
                        Welcome, hngoxuantg
                    </span>
                    <span class="me-3">
                        <i class="fas fa-clock me-1"></i>
                        2025-06-11 13:38:35
                    </span>
                    <a href="/Account/Logout" class="btn btn-outline-light btn-sm">
                        <i class="fas fa-sign-out-alt me-1"></i>
                        Logout
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Area -->
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 admin-sidebar">
                <nav class="nav flex-column">
                    <a class="nav-link active" href="/Admin">
                        <i class="fas fa-home me-2"></i>Dashboard
                    </a>
                    <a class="nav-link" href="/Admin/Motorbikes">
                        <i class="fas fa-motorcycle me-2"></i>Motorbikes
                    </a>
                    <a class="nav-link" href="/Admin/Rentals">
                        <i class="fas fa-file-contract me-2"></i>Rentals
                    </a>
                    <a class="nav-link" href="/Admin/Customers">
                        <i class="fas fa-users me-2"></i>Customers
                    </a>
                    <a class="nav-link" href="/Admin/Reports">
                        <i class="fas fa-chart-bar me-2"></i>Reports
                    </a>
                    <a class="nav-link" href="/Admin/Settings">
                        <i class="fas fa-cog me-2"></i>Settings
                    </a>
                </nav>
            </div>

            <!-- Main Content -->
            <div class="col-md-10 admin-content">
                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb" class="mb-3">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/Admin">
                                <i class="fas fa-home"></i> Admin
                            </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            @ViewData["Title"]
                        </li>
                    </ol>
                </nav>

                <!-- Page Content -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            @ViewData["Title"]
                        </h5>
                    </div>
                    <div class="card-body">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-light text-center py-3 mt-auto">
        <div class="container">
            <small>
                © 2025 Motorbike Rental Admin - Last accessed by hngoxuantg at 2025-06-11 13:38:35
            </small>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom Admin Script -->
    <script>
        // Highlight active menu
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const menuLinks = document.querySelectorAll('.admin-sidebar .nav-link');

            menuLinks.forEach(link => {
                link.classList.remove('active');
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                }
            });
        });

        // Auto refresh time
               setInterval(function () {
            const now = new Date();

            // Lấy giờ Việt Nam bằng cách chuyển múi giờ
            const vnTime = new Date(now.getTime() + 7 * 60 * 60 * 1000);

            // Format lại thành chuỗi: YYYY-MM-DD HH:mm:ss
            const formatted = vnTime.toISOString().slice(0, 19).replace('T', ' ');

            const timeElement = document.querySelector('.fas.fa-clock')?.parentNode;
            if (timeElement) {
                timeElement.innerHTML = '<i class="fas fa-clock me-1"></i>' + formatted;
            }
        }, 1000);

    </script>
</body>
</html>