@model MotorbikeRental.Application.DTOs.Vehicles.MotorbikeDto
@{
    ViewData["Title"] = "Motorbike Details";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="fas fa-motorcycle me-2"></i>Motorbike Details</h3>
            <a href="@Url.Action("Index", "Motorbike")" class="btn btn-outline-light btn-sm">
                <i class="fas fa-arrow-left me-1"></i>Back to List
            </a>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="img-fluid rounded shadow-sm mb-3" alt="@Model.MotorbikeName" style="max-height: 250px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center rounded shadow-sm" style="height: 250px;">
                            <i class="fas fa-motorcycle fa-5x text-muted"></i>
                        </div>
                    }
                    <div class="mt-2">
                        <span class="badge @(Model.Status == MotorbikeRental.Domain.Enums.VehicleEnum.MotorbikeStatus.Available ? "bg-success" : Model.Status == MotorbikeRental.Domain.Enums.VehicleEnum.MotorbikeStatus.Rented ? "bg-warning text-dark" : Model.Status == MotorbikeRental.Domain.Enums.VehicleEnum.MotorbikeStatus.UnderMaintenance ? "bg-info text-dark" : "bg-danger") px-3 py-2 fs-6">
                            @Model.Status.ToString()
                        </span>
                    </div>
                </div>
                <div class="col-md-8">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Motorbike Name</dt>
                        <dd class="col-sm-8">@Model.MotorbikeName</dd>

                        <dt class="col-sm-4">Category</dt>
                        <dd class="col-sm-8">@Model.CategoryName (ID: @Model.CategoryId)</dd>

                        <dt class="col-sm-4">Brand</dt>
                        <dd class="col-sm-8">@Model.Brand</dd>

                        <dt class="col-sm-4">License Plate</dt>
                        <dd class="col-sm-8">@Model.LicensePlate</dd>

                        <dt class="col-sm-4">Year</dt>
                        <dd class="col-sm-8">@Model.Year</dd>

                        <dt class="col-sm-4">Color</dt>
                        <dd class="col-sm-8">@Model.Color</dd>

                        <dt class="col-sm-4">Engine Capacity</dt>
                        <dd class="col-sm-8">@Model.EngineCapacity cc</dd>

                        <dt class="col-sm-4">Chassis Number</dt>
                        <dd class="col-sm-8">@Model.ChassisNumber</dd>

                        <dt class="col-sm-4">Engine Number</dt>
                        <dd class="col-sm-8">@Model.EngineNumber</dd>

                        <dt class="col-sm-4">Mileage</dt>
                        <dd class="col-sm-8">@Model.Mileage?.ToString("N0") ?? "N/A" km</dd>

                        <dt class="col-sm-4">Hourly Rate</dt>
                        <dd class="col-sm-8">@Model.HourlyRate.ToString("C0")</dd>

                        <dt class="col-sm-4">Daily Rate</dt>
                        <dd class="col-sm-8">@Model.DailyRate.ToString("C0")</dd>

                        <dt class="col-sm-4">Condition</dt>
                        <dd class="col-sm-8">@Model.MotorbikeConditionStatus.ToString()</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer bg-light text-end">
            <a href="@Url.Action("Edit", "Motorbike", new { id = Model.MotorbikeId })" class="btn btn-warning me-2">
                <i class="fas fa-edit me-1"></i>Edit
            </a>
            <a href="@Url.Action("Index", "Motorbike")" class="btn btn-secondary">
                <i class="fas fa-list me-1"></i>Back to List
            </a>
        </div>
    </div>
</div>